<h3>Post Form</h3>

<%= form_for(@post) do |f| %>
  <!-- puts everything within @post, like in rake schema table creation -->
  <label>Post title:</label><br>
  <%= f.text_field :title %><br>
  <!-- replaces text_field_tag and the need for a , @post.title source -->

  <label>Post description</label><br>
  <%= f.text_area :description %><br>


  <%= f.submit %>
<% end %>